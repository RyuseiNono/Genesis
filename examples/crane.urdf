<?xml version="1.0"?>
<robot name="crane">
    <!-- ベースリンクを追加 -->
    <link name="world"/>

    <!-- 左側固定レール -->
    <link name="left_rail">
        <visual>
            <geometry>
                <box size="0.3 12.0 0.3"/>
            </geometry>
            <material name="dark_gray">
                <color rgba="0.3 0.3 0.3 1"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <box size="0.3 12.0 0.3"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="50"/>
            <inertia ixx="60.0" ixy="0" ixz="0" iyy="0.375" iyz="0" izz="60.0"/>
        </inertial>
    </link>

    <!-- 右側固定レール -->
    <link name="right_rail">
        <visual>
            <geometry>
                <box size="0.3 12.0 0.3"/>
            </geometry>
            <material name="dark_gray">
                <color rgba="0.3 0.3 0.3 1"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <box size="0.3 12.0 0.3"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="50"/>
            <inertia ixx="60.0" ixy="0" ixz="0" iyy="0.375" iyz="0" izz="60.0"/>
        </inertial>
    </link>

    <!-- 前側ブリッジガーダー -->
    <link name="front_bridge">
        <visual>
            <geometry>
                <box size="8.0 0.5 0.5"/>
            </geometry>
            <material name="blue">
                <color rgba="0.0 0.0 0.8 1"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <box size="8.0 0.5 0.5"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="100"/>
            <inertia ixx="2.1" ixy="0" ixz="0" iyy="53.35" iyz="0" izz="53.35"/>
        </inertial>
    </link>

    <!-- 後側ブリッジガーダー -->
    <link name="back_bridge">
        <visual>
            <geometry>
                <box size="8.0 0.5 0.5"/>
            </geometry>
            <material name="blue">
                <color rgba="0.0 0.0 0.8 1"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <box size="8.0 0.5 0.5"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="100"/>
            <inertia ixx="2.1" ixy="0" ixz="0" iyy="53.35" iyz="0" izz="53.35"/>
        </inertial>
    </link>

    <!-- トロリー -->
    <link name="trolley">
        <visual>
            <geometry>
                <box size="0.8 2.4 0.4"/>
            </geometry>
            <material name="yellow">
                <color rgba="1.0 1.0 0.0 1"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <box size="0.8 2.4 0.4"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="50"/>
            <inertia ixx="24.17" ixy="0" ixz="0" iyy="2.67" iyz="0" izz="26.67"/>
        </inertial>
    </link>

    <!-- X軸回りの振り子運動のための中間リンク -->
    <link name="pendulum_link_x">
        <inertial>
            <mass value="0.1"/>
            <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
        </inertial>
    </link>

    <!-- 伸縮機構の中間リンク -->
    <link name="extension_link">
        <inertial>
            <mass value="0.1"/>
            <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
        </inertial>
    </link>

    <!-- ワイヤーロープと荷物を統合 -->
    <link name="wire_cargo">
        <visual name="wire">
            <geometry>
                <cylinder length="10.0" radius="0.02"/>
            </geometry>
            <material name="silver">
                <color rgba="0.8 0.8 0.8 1"/>
            </material>
        </visual>
        <collision name="wire_collision">
            <geometry>
                <cylinder length="10.0" radius="0.02"/>
            </geometry>
        </collision>
        <visual name="cargo">
            <origin xyz="0 0 -5.0"/>
            <geometry>
                <sphere radius="0.5"/>
            </geometry>
            <material name="red">
                <color rgba="1.0 0.0 0.0 2.0"/>
            </material>
        </visual>
        <collision name="cargo_collision">
            <origin xyz="0 0 -5.0"/>
            <geometry>
                <sphere radius="0.5"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="100"/>
            <origin xyz="0 0 -1.5"/>
            <inertia ixx="10" ixy="0" ixz="0" iyy="10" iyz="0" izz="10"/>
        </inertial>
    </link>

    <!-- 左側固定レールをベースリンクに接続 -->
    <joint name="base_to_left_rail" type="fixed">
        <parent link="world"/>
        <child link="left_rail"/>
        <origin xyz="0 0 20.0" rpy="0 0 0"/>
    </joint>


    <!-- 右側レールの配置 -->
    <joint name="rail_placement" type="fixed">
        <parent link="left_rail"/>
        <child link="right_rail"/>
        <origin xyz="8.0 0 0" rpy="0 0 0"/>
    </joint>

    <!-- ブリッジの移動 -->
    <joint name="front_bridge_left_joint" type="prismatic">
        <parent link="left_rail"/>
        <child link="front_bridge"/>
        <origin xyz="4.0 1.0 0" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
        <limit lower="-5.5" upper="5.5" effort="2000" velocity="1.0"/>
    </joint>

    <!-- 後側ブリッジの移動（前側と同期） -->
    <joint name="back_bridge_left_joint" type="prismatic">
        <parent link="left_rail"/>
        <child link="back_bridge"/>
        <origin xyz="4.0 -1.0 0" rpy="0 0 0"/>  <!-- 前側から2m後ろに配置 -->
        <axis xyz="0 1 0"/>
        <limit lower="-5.5" upper="5.5" effort="2000" velocity="1.0"/>
        <mimic joint="front_bridge_left_joint"/>  <!-- 前側ブリッジの動きを模倣 -->
    </joint>

    <!-- トロリーの移動 -->
    <joint name="trolley_joint" type="prismatic">
        <parent link="front_bridge"/>
        <child link="trolley"/>
        <origin xyz="0 -1.0 0" rpy="0 0 0"/>
        <axis xyz="1 0 0"/>
        <limit lower="-3.5" upper="3.5" effort="1000" velocity="1.5"/>
    </joint>

    <!-- X軸回りの振り子運動 -->
    <joint name="pendulum_x" type="revolute">
        <parent link="trolley"/>
        <child link="pendulum_link_x"/>
        <origin xyz="0 0 -0.2" rpy="0 0 0"/> 
        <axis xyz="1 0 0"/>
        <limit lower="-1.57" upper="1.57" effort="0" velocity="3.14"/>
        <dynamics damping="10.0"/>
    </joint>

    <!-- Y軸回りの振り子運動 -->
    <joint name="pendulum_y" type="revolute">
        <parent link="pendulum_link_x"/>
        <child link="extension_link"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
        <limit lower="-1.57" upper="1.57" effort="0" velocity="3.14"/>
        <dynamics damping="10.0"/>
    </joint>

    <!-- ワイヤーの伸縮 -->
    <joint name="wire_extension" type="prismatic">
        <parent link="extension_link"/>
        <child link="wire_cargo"/>
        <origin xyz="0 0 -5.0" rpy="0 0 0"/>
        <axis xyz="0 0 -1"/>
        <limit lower="-10.0" upper="-1.0" effort="1000" velocity="0.5"/>
        <dynamics damping="50.0"/>
    </joint>

</robot>